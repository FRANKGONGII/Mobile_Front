<!-- res/drawable/circle_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- 设置背景颜色，可以根据需要修改 -->
    <solid android:color="#00FFFFFF" />

    <!-- 可选：设置边框 -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <!-- 可选：设置边界间距 -->
    <padding
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp" />
</shape>
