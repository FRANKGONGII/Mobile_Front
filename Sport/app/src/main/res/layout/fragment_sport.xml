<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:elevation="25dp"
    android:theme="@style/NoActionBarTheme"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="@dimen/margin_edge_20"
        android:layout_marginTop="16dp"

        android:background="@drawable/frame"
        android:orientation="vertical"
        android:padding="@dimen/margin_edge"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="运动方法"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/textsize_4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_edge"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:text="1.请保持40分钟以上的运动时间"
            android:textColor="@color/text_color_2"
            android:textSize="@dimen/textsize_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_edge"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:text="2.不要剧烈运动，心率保持在140~160之间"
            android:textColor="@color/text_color_2"
            android:textSize="@dimen/textsize_2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/sum_distance_linear"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/frame"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp">
            <!--android:background="@drawable/frame"-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="累计运动："
                android:textColor="@color/text_color_2"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id = "@+id/sum_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="8.8"
                    android:textColor="@color/text_color_2"
                    android:textSize="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="km"
                    android:textColor="@color/text_color_2"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/frame"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp">
            <!--android:background="@drawable/frame"-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="本周运动："
                android:textColor="@color/text_color_2"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/week_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="2.8"
                    android:textColor="@color/text_color_2"
                    android:textSize="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="km"
                    android:textColor="@color/text_color_2"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/ButtonGo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="372dp"
        android:background="@drawable/button_circle"
        android:ellipsize="end"

        android:maxHeight="0dp"
        android:maxLines="2"
        android:minHeight="0dp"

        android:outlineProvider="none"
        android:text="@string/button_go"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!--        注意，这里选择的按钮要找个图片-->
    <Button
        android:id="@+id/ButtonChooseType"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginTop="568dp"
        android:background="@drawable/button_rectangle"

        android:ellipsize="end"
        android:maxHeight="0dp"
        android:maxLines="1"
        android:minHeight="0dp"
        android:outlineProvider="none"
        android:singleLine="true"
        android:text="跑步"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>