<!--                android:layout_height="match_parent"-->
<!--                android:layout_marginStart="25dp"/>-->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的数据"
                android:textSize="@dimen/fifteen"
                android:layout_marginStart="30dp"/>

            <GridView
                android:id="@+id/sportCardGridView"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:columnWidth="140dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp"
                android:scrollbars="none"
                android:scrollingCache="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="其它数据"
                android:textSize="@dimen/fifteen"
                android:layout_marginStart="30dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardCornerRadius="4dp"
                app:cardMaxElevation="20dp"
                app:layout_anchorGravity="top|center"
                app:strokeColor="@android:color/transparent">

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="运动日历"
                android:textSize="@dimen/fifteen"
                android:layout_marginStart="30dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardCornerRadius="4dp"
                app:cardMaxElevation="20dp"
                app:layout_anchorGravity="top|center"
                app:strokeColor="@android:color/transparent">

                <com.haibin.calendarview.CalendarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:default_status="shrink"
                    app:calendar_show_mode="only_week_view">

                    <com.haibin.calendarview.CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:calendar_height="50dp"
                        app:current_month_text_color="#333333"
                        app:current_day_lunar_text_color="#CFCFCF"
                        app:min_year="2004"
                        app:week_start_with="mon"
                        app:month_view="com.example.myapplication.ui.calendar.CustomMonthView"
                        app:week_view="com.example.myapplication.ui.calendar.CustomWeekView"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="This is text">

                        </TextView>
                    </LinearLayout>

                </com.haibin.calendarview.CalendarLayout>



            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

